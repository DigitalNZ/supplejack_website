.content{:id => "panel1-#{index + 2}"}
  %section
    - if name == 'usage'
      %p.filter-usage-statement
        = fa_icon('exclamation-triangle')
        = t('records.usage_statement')
    %ul.facet-list{ class: "facet-list-#{name}"}
      - facet_list(name, values).each do |label, count|
        %li
          = content_tag :a,                                                                                                |
            "#{label} <span class='count'>#{number_with_precision(count, delimiter: ',', precision: 0)}</span>".html_safe, |
            class: filter_class(label[0]),                                                                                    |
            data: {facet: name, filter: label}                                                                            |
