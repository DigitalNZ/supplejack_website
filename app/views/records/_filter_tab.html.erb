<div class="content" id="panel1-<%= index + 2 %>">
  <section>
    <ul class="columns">
    <% facet_values.each do |label, count| %>
      <li>
        <%= 
          content_tag :a, 
          "#{label} <span class='count'>#{number_with_precision(count, delimiter: ',', precision: 0)}</span>".html_safe,
          class: filter_class(label),
          data: {facet: facet, filter: label}   %>
      </li>
    <% end %>
    </ul>
  </section>
</div>