= form_for(@community) do |f|
  - if @community.errors.any?
    #error_explanation
      %h2
        = pluralize(@community.errors.count, "error")
        prohibited this community from being saved:
      %ul
        - @community.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :slug
    %br/
    = f.text_field :slug
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .actions
    = f.submit
